<main>
  <p id="notice"></p>
  <div class='container'>
    <div class='row'>
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
        <% if @user.errors.any? %>
          <%= @user.errors.count %>errors have occurred.
          <% @user.errors.full_messages.each do |message| %>
            <%= message %>
          <% end %>
        <% end %>
        <%= form_with model:@user, local:true do |f| %>
          <div class="form-group">
            <h4>Name</h4>
            <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %>
          </div>
          <div class="form-group">
            <h4>Image</h4>
            <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
          </div>
          <div class="form-group">
            <h4>Introduction</h4>
            <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", placeholder:"自己紹介文" %>
          </div>
          <div class="form-group">
            <%= f.submit "Update User" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>
