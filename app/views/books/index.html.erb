<div class='container px-5 px-sm-0'>
  <% if @book.errors.any? %>
    <%= @book.errors.count %>errors have occurred.
    <% @book.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>
  <div class='row'>
    <div class='col-md-3'>
      <%= render 'users/list', user: @user, book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <table class='table'>
        <thead>
          <tr>
            <th class="align-middle"></th>
            <th class="align-middle">Title</th>
            <th class="align-middle">Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td class="align-middle">
                <%= link_to user_path(book.user_id) do %>
                  <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
                <% end %>
              </td>
              <td class="align-middle"><%= link_to book_path(book.id) do %><%= book.title %><% end %></td>
              <td class="align-middle"><%= book.body %></td>
            </tr>
          <% end %>

        </tbody>
      </table>
    </div>
  </div>
</div>
